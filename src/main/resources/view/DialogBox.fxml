<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<fx:root
        xmlns:fx="http://javafx.com/fxml"
        xmlns="http://javafx.com/javafx"
        alignment="TOP_RIGHT"
        type="javafx.scene.layout.HBox"
>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0"/>
    </padding>
    <Label fx:id="dialog"
           maxHeight="-Infinity"
           maxWidth="-Infinity"
           minHeight="-Infinity"
           minWidth="-Infinity"
           style="-fx-background-color: #ccbbcc;
                  -fx-text-fill: #401050;
                  -fx-border-radius: 10;
                  -fx-background-radius: 10;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,1), 20, 0, 0, 0);"
           text="Label" wrapText="true">
        <font>
            <Font name="Comic Sans MS" size="12.0"/>
        </font>
        <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </HBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </Label>
    <Circle fx:id="displayPicture" fill="#ffffff" radius="30.0"
            style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,1), 20, 0, 0, 0);">
        <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </HBox.margin>
    </Circle>
</fx:root>
