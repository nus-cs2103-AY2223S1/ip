<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<fx:root alignment="TOP_LEFT" fillWidth="false" type="VBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="profile" alignment="CENTER_LEFT">
            <children>
                <Pane style="-fx-border-color: #f0f0f0; -fx-border-radius: 25px;">
                    <children>
                        <ImageView fx:id="displayPicture" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </Pane>
                <Label fx:id="name" text="Label">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </Label>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </HBox>
        <TextFlow fx:id="dialogWrapper">
            <children>
                <Label fx:id="dialog" maxWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 0px 12px 12px 12px;" text="messagemessagemessagemessagemessagemessagemessage" wrapText="true">
                    <font>
                        <Font name="Courier New Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
            </children>
        </TextFlow>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
